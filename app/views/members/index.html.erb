<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <% if admin_logged_in? %>
      <th colspan="3"></th>
      <% else %>
      <th></th>
       <% end %>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>

        <td><%= link_to 'Show', member, class: "btn btn-lg btn-primary" %></td>
        <% if admin_logged_in? %>
        <td><%= link_to 'Edit', edit_member_path(member), class: "btn btn-lg btn-primary" %></td>
        <td><%= link_to 'Delete', member, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-lg btn-primary"%></td>
            <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


