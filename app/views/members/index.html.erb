<p id="notice"><%= notice %></p>

<h1>Members</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Password digest</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td><%= member.email %></td>
        <td><%= member.password_digest %></td>
        <td><%= link_to 'Show', member, class: "btn btn-lg btn-primary" %></td>
        <td><%= link_to 'Edit', edit_member_path(member), class: "btn btn-lg btn-primary" %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-lg btn-primary"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


