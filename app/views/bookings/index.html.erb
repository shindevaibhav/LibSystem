<p id="notice"><%= notice %></p>

<h1>Bookings</h1>

<table>
  <thead>
    <tr>
      <th>Room Number  </th>
      <th>Booked By    </th>
      <th>Date         </th>
      <th>Slot start   </th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bookings.each do |booking| %>
      <tr>
        <td><%= booking.room_id %></td>
        <td><%= booking.member_id %></td>
        <td><%= booking.date %></td>
        <td><%= booking.slot_start %></td>
        <td><%= link_to 'Show', booking, class: "btn btn-lg btn-primary"%></td>

        <td><%= link_to 'Edit', edit_booking_path(booking), class: "btn btn-lg btn-primary" %></td>
        <td><%= link_to 'Destroy', booking, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-lg btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="center">
<%= link_to 'New Booking', new_booking_path, class: "btn btn-lg btn-primary"%>
</div>