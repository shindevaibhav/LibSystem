<h1>New Room</h1>

<%= form_for(@room) do |f| %>
    <% if @room.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>

          <ul>
            <% @room.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <table>
      <tr>
        <th><div class="field">
          <%= f.label :room_number %>
          <%= f.number_field :room_number %>
        </div></th>

        <th><div class="field">
          <%= f.label :size %>
          <%= f.select :size,[['Small','small'],['Medium','medium'],['Large','large']] %>
        </div></th>

        <th><div class="field">
          <%= f.label :building %>
          <%= f.select :building,[['Hunt','hunt'],['D.H.Hill','hill']] %>
        </div></th>
      </tr>
    </table>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>

<%= link_to 'Back', rooms_path, class: "btn btn-md btn-info" %>
