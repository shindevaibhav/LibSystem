<h1>Admin List</h1>
<hr>
<p id="notice"><%= notice %></p>
<table class="table table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>E-Mail Address</th>
  </tr>
  </thead>

  <tbody>
  <% @admins.each do |admin| %>
      <tr>
        <% if (admin.id == session[:admin_id] || admin.id == 1)%>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>


            <td><%= link_to 'Edit', edit_admin_path(@admin), class: "btn btn-lg btn-primary"%></td>
            <td></td>
        <% else %>
            <td><%= admin.name %></td>
            <td><%= admin.email %></td>

            <td><%= link_to 'Edit', edit_admin_path(admin), class: "btn btn-lg btn-primary"%>
        <% end %>
      </tr>
  <% end %>
  </tbody>
</table>
<br>