<p id="notice"><%= notice %></p>

<h1>Admins</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <!--<th>Password digest</th>-->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.name %></td>
        <td><%= admin.email %></td>
        <!--<td><%= admin.password_digest %></td>-->
        <td><%= link_to 'Show', admin, class: "btn btn-lg btn-primary"%></td>
        <!--<% if (admin.name != "LibSystem Root" || admin.id != 1)  %>
          <td><%= link_to 'Edit', edit_admin_path(admin) , class: "btn btn-lg btn-primary"%></td>
        <% end %> -->
        <% if (admin.name != "LibSystem Root" && admin.id != 1) %>
            <td><%= link_to 'Destroy', admin, method: :delete, data: { confirm: 'Are you sure?' } , class: "btn btn-lg btn-primary"%></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

